@model Wise.Models.ConnexionViewModel
@{
    Layout = "_LayoutLogin";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
    <div class="container" style="position: relative">
        <div class="row">
            <div class="col s12"><h1 class="title-login">Connexion à Wise</h1></div>
            <form action="/Connexion" methode="POST">
                <div class="col s12">
                    <div class="input-field-wise input-field content-input" id="divMail">
                        <i class="material-icons prefix color-grey">mail</i>
                        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { id = "mail", name = "mail", @type = "email", @placeholder = "Mail", @class = "wise-input" } })
                    </div>
                </div>
                
                <div class="col s12">
                    <div class="input-field-wise input-field content-input" id="divMdp">
                        <i class="material-icons prefix color-grey">lock</i>
                        @Html.EditorFor(model => model.motDePasse, new { htmlAttributes = new { id = "mdp", name = "mdp", @type = "password", @placeholder = "Mot de passe", @class = "wise-input" } })
                    </div>
                </div>

                <div class="input-field col s12">
                    <div class="content-btn-login">
                        <button class="btn-submit" type="submit">Connexion</button>
                    </div>
                </div>
            </form>

            <div>
                <a href="" class="link-a login-a">Mot de passe oubliée</a>
            </div>
        </div>
    </div>

    <div class="container" style="position: relative">
        <div class="row">
            <div class="content-social">
                <div class="col s4">
                    <a href="" class="btn btn-google">Google</a>
                </div>

                <div class="col s4">
                    <a href="" class="btn btn-facebook">Facebook</a>
                </div>
                
                <div class="col s4">
                    <a href="" class="btn btn-linkedin">LinkedIn</a>
                </div>
            </div>
        </div>
    </div>
}
