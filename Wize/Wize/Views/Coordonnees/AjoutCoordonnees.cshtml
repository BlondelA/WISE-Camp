@model Wize.Models.CoordonneesViewModel

@{
    ViewData["Title"] = "Ajout de coordonnees";
}

<h1>Coordonnees</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
    
    <div class="form-group">
        @Html.EditorFor(model => model.civilite)
    </div>
    <div class="form-row">
        <div class="form-group col-xl-6 col-lg-12">
            @Html.EditorFor(model => model.nom)
        </div>
        <div class="form-group col-xl-6 col-lg-12">
            @Html.EditorFor(model => model.prenom)
        </div>
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ligne1)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ligne2)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ligne3)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.courriel)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.telfix)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.portable)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.fax)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.web)
    </div>
    
    <button type="submit" class="btn btn-primary btn-block">Ajouter</button>
}