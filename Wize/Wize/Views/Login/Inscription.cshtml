@model Wize.Models.InscriptionViewModel
@{
    Layout = "_LayoutLogin";
    ViewBag.Title = "Inscription";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "text-danger styleListe" })
    <div class="container">
        <div class="row">
            <div class="col s12"><h1 class="title-login">Inscription à Wise</h1></div>
            <form action="/inscription" methode="POST">
                <div class="col s12 m12 l6">
                    <div class="input-field input-field-wise content-input" id="divFirstName">
                        <i class="material-icons prefix color-grey">account_circle</i>
                        @*<input id="first_name" name="nom" type="text" placeholder="Nom" class="wise-input">*@
                        @Html.EditorFor(model => model.nom, new { htmlAttributes = new { id = "first_name", name = "nom", @type = "text", @placeholder = "Nom", @class = "wise-input" } })
                    </div>
                </div>
                <div class="col s12 m12 l6">
                    <div class="input-field-wise input-field content-input" id="divLastName">
                        <i class="material-icons prefix color-grey">account_circle</i>
                        @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { id = "first_name", name = "prenom", @type = "text", @placeholder = "Prénom", @class = "wise-input" } })

                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field-wise input-field content-input" id="divMail">
                        <i class="material-icons prefix color-grey">mail</i>
                        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { id = "mail", name = "mail", @type = "email", @placeholder = "Mail", @class = "wise-input" } })
                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field-wise input-field content-input" id="divMdp">
                        <i class="material-icons prefix color-grey">lock</i>
                        @*<input id="mdp" name="mdp" type="password" placeholder="Mot de passe" class="wise-input">*@
                        @Html.EditorFor(model => model.motDePasse, new { htmlAttributes = new { id = "mdp", @name = "mdp", @type = "password", @placeholder = "Mot de passe", @class = "wise-input" } })

                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field-wise input-field content-input" id="divMdpConfirm">
                        <i class="material-icons prefix color-grey">lock</i>
                        @*<input id="mdpConfirm" name="mdpConfirm" type="password" placeholder="Confirmer le mot de passe" class="wise-input">*@
                        @Html.EditorFor(model => model.confirmationMotDePasse, new { htmlAttributes = new { id = "mdpConfirm", @name = "mdpConfirm", @type = "password", @placeholder = "Confirmer le mot de passe", @class = "wise-input" } })

                    </div>
                </div>
                @*<div class="col s12">
                    <div class="input-field-wise input-field content-input" id="divInfo">
                        <i class="material-icons prefix color-grey">info</i>
                        <input id="infosComple" name="infosComple" type="text" placeholder="Information complémentaire" class="wise-input">
                    </div>
                </div>*@
                <div class="input-field col s12">
                    <div class="content-btn-login">
                        <button class="btn-submit" type="submit">Créer mon compte</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}