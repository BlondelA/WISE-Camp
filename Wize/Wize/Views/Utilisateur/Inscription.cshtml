@model Wize.Models.InscriptionViewModel

@{
    ViewData["Title"] = "Inscription";
}

<h1>Inscription</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "text-danger styleListe" })
    <div class="form-row">
        <div class="form-group col-xl-6 col-lg-12">
            @Html.EditorFor(model => model.nom)
            @*@Html.BootstrapValidationFor(model => model.nom)*@

        </div>
        <div class="form-group col-xl-6 col-lg-12">
            @Html.EditorFor(model => model.prenom)
        </div>
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.mail)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.motDePasse)

    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.confirmationMotDePasse)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Inscription</button>
}

